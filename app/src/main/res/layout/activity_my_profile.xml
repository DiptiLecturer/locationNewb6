<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenLight"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Email"
        android:textColor="@color/greenPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:textColor="@color/textDark"
        android:backgroundTint="@color/greenPrimary"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnUpdateUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Username"
        android:textColor="@color/white"
        android:backgroundTint="@color/greenPrimary"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share My Location"
        android:textColor="@color/white"
        android:backgroundTint="@color/greenAccent"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Location on Map"
        android:textColor="@color/white"
        android:backgroundTint="@color/greenPrimaryDark"/>
</LinearLayout>
